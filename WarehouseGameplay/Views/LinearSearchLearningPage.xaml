<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseGameplay.Views.LinearSearchLearningPage">
    <ContentPage.Content>
        <Grid RowDefinitions="70,*" RowSpacing="0">
            <StackLayout Grid.Row="0" BackgroundColor="#7a005c">
                <Grid ColumnDefinitions="Auto,Auto">
                    <Label Margin="20,20,0,0" Grid.Column="1" HorizontalOptions="End" Text="Linear Search " CharacterSpacing="1" FlowDirection="LeftToRight" MaxLines="1" TextTransform="Default" Style="{StaticResource PageHeader}"/>
                    <ImageButton
                            Grid.Column="0"
                            Margin="10,15,0,0"
                            BackgroundColor="{StaticResource Accent}"
                            CornerRadius="16"
                            HeightRequest="45"
                            x:Name="ButtonClose"
                            Clicked="ButtonClose_Clicked"
                            HorizontalOptions="End"
                            Source="LeftArrowImage.png"
                            VerticalOptions="Center"
                            WidthRequest="45" />
                </Grid>
            </StackLayout>
            <WebView x:Name="LineerSearchView"  Grid.Row="1"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>